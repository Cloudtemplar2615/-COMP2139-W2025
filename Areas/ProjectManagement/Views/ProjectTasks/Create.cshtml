@model COMP2139_ICE.Areas.ProjectManagement.Models.ProjectTask

<h1>Create Task</h1>

<form asp-action="Create" method="post">
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.AntiForgeryToken()

    <div>
        <label asp-for="Title"></label>
        <input asp-for="Title" class="form-control"/>
    </div>

    <div>
        <label asp-for="Description"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
    </div>

    <div>
        <label asp-for="DueDate"></label>
        <input asp-for="DueDate" type="datetime-local" class="form-control"/>
    </div>

    <div class="form-check">
        <input class="form-check-input" asp-for="IsComplete" type="checkbox"/>
        <label class="form-check-label" asp-for="IsComplete"></label>
    </div>

    <div>
        <label asp-for="ProjectId"></label>
        <select asp-for="ProjectId" asp-items="ViewBag.ProjectId" class="form-control"></select>
    </div>

    <button type="submit" class="btn btn-success">Create</button>
</form>

