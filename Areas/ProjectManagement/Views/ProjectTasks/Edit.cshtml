@model COMP2139_ICE.Areas.ProjectManagement.Models.ProjectTask

<h1>Edit Task</h1>

<form asp-action="EditPost" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Id" />

    <div>
        <label asp-for="Title"></label>
        <input asp-for="Title" class="form-control" />
    </div>

    <div>
        <label asp-for="Description"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
    </div>

    <div>
        <label asp-for="DueDate"></label>
        <input asp-for="DueDate" type="datetime-local" class="form-control" />
    </div>

    <div class="form-check">
        <input class="form-check-input" asp-for="IsComplete" type="checkbox" />
        <label class="form-check-label" asp-for="IsComplete"></label>
    </div>

    <div>
        <label asp-for="ProjectId"></label>
        <select asp-for="ProjectId" asp-items="ViewBag.ProjectId" class="form-control"></select>
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
</form>

<a asp-action="Index">Back to List</a>