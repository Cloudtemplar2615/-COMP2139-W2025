<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - GBC Project Management</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <!-- FontAwesome for icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css"
          integrity="sha384-k6RqeWeci5ZR/Lv4MR0sA0FfDOM4N4I2eC9mAdS9S0R6B2w1xPkJqJf3R4Vt3zj8"
          crossorigin="anonymous" />
</head>
<body>
<header>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container-fluid">
            <!-- Navbrand on the left with a FontAwesome icon -->
            <a class="navbar-brand" asp-controller="Home" asp-action="Index">
                <i class="fas fa-briefcase"></i> GBC Project Management
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                    data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <!-- Right-justified navigation links and search form -->
            <div class="collapse navbar-collapse justify-content-end" id="navbarSupportedContent">
                <ul class="navbar-nav mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Home" asp-action="Index">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Projects" asp-action="Index">Projects</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="ProjectTasks" asp-action="Index">Project Tasks</a>
                    </li>
                </ul>
                <form class="d-flex ms-3" method="get" asp-controller="Home" asp-action="Search">
                    <div class="input-group">
                        <select class="form-select" name="category">
                            <option value="Project">Projects</option>
                            <option value="ProjectTask">Project Tasks</option>
                        </select>
                        <input class="form-control" type="search" placeholder="Search" name="searchTerm" />
                        <button class="btn btn-outline-success" type="submit">Search</button>
                    </div>
                </form>
            </div>
        </div>
    </nav>
</header>
<div class="container mt-4">
    @RenderBody()
</div>
<footer class="bg-light text-center text-lg-start fixed-bottom">
    <div class="text-center p-3">
        &copy; @DateTime.Now.Year - GBC Project Management
    </div>
</footer>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
@RenderSection("Scripts", required: false)
</body>
</html>

